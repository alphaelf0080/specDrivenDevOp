# 環境變數配置

# 伺服器配置
NODE_ENV=development
PORT=5010

# 前端 URL（用於 CORS）
CLIENT_URL=http://localhost:5030

# PostgreSQL 資料庫配置
DB_HOST=192.168.10.6
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=1234

# 資料庫連線池配置
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# 資料庫 SSL 配置（生產環境建議開啟）
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# 其他配置
LOG_LEVEL=info
